---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="n8than.dev" description="Developer, designer, and builder of things on the web">
  <section class="hero">
    <h1>Hey, I'm Nathan</h1>
    <p>I design and build things on the web.</p>
    <nav class="hero-links">
      <a href="/projects">Projects</a>
      <a href="/journal">Journal</a>
      <a href="/about">About</a>
    </nav>
  </section>
</BaseLayout>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl) var(--space-md);
    min-height: 60vh;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: var(--space-sm);
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--color-muted);
    margin-bottom: var(--space-lg);
  }

  .hero-links {
    display: flex;
    gap: var(--space-lg);
  }

  .hero-links a {
    font-size: 1.1rem;
  }
</style>
